.ic {
  display: flex;
  gap: 18rpx;
  padding: 18rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 6rpx 22rpx rgba(0, 0, 0, 0.08);
}

.ic-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 18rpx;
  background: rgba(0, 0, 0, 0.04);
}

.ic-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  min-width: 0;
}

.ic-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ic-desc {
  font-size: 24rpx;
  color: var(--gray-600);
  line-height: 1.4;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ic-product-meta {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 12rpx;
}

.ic-price {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.ic-price-current {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--primary-color);
}

.ic-price-origin {
  font-size: 22rpx;
  color: var(--gray-500);
  text-decoration: line-through;
}

.ic-tags {
  display: flex;
  gap: 10rpx;
}

.ic-tag {
  font-size: 22rpx;
  color: var(--gray-600);
  background: rgba(255, 102, 0, 0.06);
  padding: 6rpx 10rpx;
  border-radius: 999rpx;
}

