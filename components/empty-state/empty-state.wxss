.empty {
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-image {
  width: 180rpx;
  height: 180rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-700);
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--gray-500);
}

