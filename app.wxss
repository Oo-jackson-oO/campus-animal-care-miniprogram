/**app.wxss**/
/* 全局样式重置 - 现代设计系统 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 现代设计系统 - 颜色变量 */
:root {
  --primary-color: #FF6600;
  --primary-light: #FFE0B3;
  --primary-dark: #e55a00;
  --secondary-color: #6c757d;
  --success-color: #28a745;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --info-color: #17a2b8;
  --light-color: #f8f9fa;
  --dark-color: #343a40;
  --white: #ffffff;
  --gray-100: #f8f9fa;
  --gray-200: #e9ecef;
  --gray-300: #dee2e6;
  --gray-400: #ced4da;
  --gray-500: #adb5bd;
  --gray-600: #6c757d;
  --gray-700: #495057;
  --gray-800: #343a40;
  --gray-900: #212529;
}

/* 通用容器样式 - 现代布局 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  box-sizing: border-box;
  position: relative;
}

/* 现代卡片系统 */
.card {
  background: var(--white);
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

/* 现代按钮系统 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: var(--white);
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn-primary:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 102, 0, 0.4);
}

.btn-primary:active::before {
  left: 100%;
}

/* 次要按钮 */
.btn-secondary {
  background: var(--white);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 12rpx;
  padding: 22rpx 46rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: var(--primary-light);
  transform: translateY(1rpx);
}

/* 现代输入框 */
.input-modern {
  background: var(--white);
  border: 2rpx solid var(--gray-300);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--gray-800);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-modern:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 6rpx rgba(255, 102, 0, 0.1);
  outline: none;
}

/* 现代标题系统 */
.title-xl {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.2;
  margin-bottom: 24rpx;
}

.title-lg {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--gray-800);
  line-height: 1.3;
  margin-bottom: 20rpx;
}

.title-md {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.title-sm {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--gray-600);
  line-height: 1.4;
  margin-bottom: 12rpx;
}

/* 现代文本系统 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-muted {
  color: var(--gray-500);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

/* 现代间距系统 */
.m-0 { margin: 0; }
.m-1 { margin: 8rpx; }
.m-2 { margin: 16rpx; }
.m-3 { margin: 24rpx; }
.m-4 { margin: 32rpx; }
.m-5 { margin: 40rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

/* 现代阴影系统 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.shadow {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.12);
}

.shadow-xl {
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.15);
}

/* 现代圆角系统 */
.rounded-sm { border-radius: 8rpx; }
.rounded { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-2xl { border-radius: 24rpx; }
.rounded-full { border-radius: 50%; }

/* 现代动画系统 */
.transition {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.transition-fast {
  transition: all 0.15s ease;
}

.transition-slow {
  transition: all 0.5s ease;
}

/* 现代渐变背景 */
.gradient-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.gradient-light {
  background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-200) 100%);
}

.gradient-card {
  background: linear-gradient(135deg, var(--white) 0%, #fafbfc 100%);
} 
