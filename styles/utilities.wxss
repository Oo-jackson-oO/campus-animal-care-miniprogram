.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  box-sizing: border-box;
  position: relative;
}

.card {
  background: var(--white);
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: var(--white);
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn-primary:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 102, 0, 0.4);
}

.btn-primary:active::before {
  left: 100%;
}

.btn-secondary {
  background: var(--white);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 12rpx;
  padding: 22rpx 46rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: var(--primary-light);
  transform: translateY(1rpx);
}

.input-modern {
  background: var(--white);
  border: 2rpx solid var(--gray-300);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--gray-800);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-modern:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 6rpx rgba(255, 102, 0, 0.1);
  outline: none;
}

.title-xl {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--gray-900);
  line-height: 1.2;
  margin-bottom: 24rpx;
}

.title-lg {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--gray-800);
  line-height: 1.3;
  margin-bottom: 20rpx;
}

.title-md {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-700);
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.title-sm {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--gray-600);
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-muted {
  color: var(--gray-500);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-danger {
  color: var(--danger-color);
}

.m-0 { margin: 0; }
.m-1 { margin: 8rpx; }
.m-2 { margin: 16rpx; }
.m-3 { margin: 24rpx; }
.m-4 { margin: 32rpx; }
.m-5 { margin: 40rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.shadow {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.12);
}

.shadow-xl {
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.15);
}

.rounded-sm { border-radius: 8rpx; }
.rounded { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-2xl { border-radius: 24rpx; }
.rounded-full { border-radius: 50%; }

.transition {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.transition-fast {
  transition: all 0.15s ease;
}

.transition-slow {
  transition: all 0.5s ease;
}

.gradient-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.gradient-light {
  background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-200) 100%);
}

.gradient-card {
  background: linear-gradient(135deg, var(--white) 0%, #fafbfc 100%);
}

