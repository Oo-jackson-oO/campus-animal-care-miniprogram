/* 现代个人中心页面设计 */
.container { 
  padding: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  position: relative;
}

/* 现代用户信息区域 */
.user-info { 
  text-align: center;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  position: relative;
  overflow: hidden;
}

.user-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}

/* 现代用户头像 */
.user-avatar { 
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #FFE0B3;
  box-shadow: 0 8rpx 25rpx rgba(255, 102, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.user-avatar:hover {
  transform: scale(1.05);
  box-shadow: 0 12rpx 35rpx rgba(255, 102, 0, 0.3);
}

/* 现代用户名 */
.nickname { 
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 24rpx;
  display: block;
  position: relative;
  z-index: 2;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 现代统计数据区域 */
.stats { 
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
  position: relative;
  z-index: 2;
}

/* 现代统计项 */
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: rgba(255, 102, 0, 0.05);
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.stat-item:hover {
  background: rgba(255, 102, 0, 0.1);
  transform: translateY(-2rpx);
}

/* 现代统计标签 */
.stat-label {
  font-size: 26rpx;
  color: #718096;
  font-weight: 500;
}

/* 现代统计数值 */
.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 现代收藏动物区域 */
.favorite { 
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  position: relative;
  overflow: hidden;
}

.favorite::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}

/* 现代区域标题 */
.section-title { 
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  color: #FF6600;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  border-radius: 2rpx;
}

/* 现代动物卡片 */
.animal-card { 
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx 0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.animal-card:hover {
  background: rgba(255, 102, 0, 0.05);
  transform: translateX(8rpx);
}

/* 现代动物头像 */
.animal-avatar { 
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 3rpx solid #FFE0B3;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.2);
  transition: all 0.3s ease;
}

.animal-avatar:hover {
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(255, 102, 0, 0.3);
}

/* 现代动物信息区域 */
.animal-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

/* 现代动物名字 */
.animal-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d3748;
  line-height: 1.3;
}

/* 现代动物描述 */
.animal-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}

/* 现代社区排名区域 */
.ranking { 
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  position: relative;
  overflow: hidden;
}

.ranking::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}

/* 现代排名区域标题 */
.ranking .section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

/* 现代奖牌图标 */
.medal-icon {
  font-size: 40rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 102, 0, 0.3));
}

/* 现代自己的排名项 */
.my-rank { 
  background: linear-gradient(135deg, #FFE0B3 0%, #FFF3E0 100%);
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: sticky;
  top: 0;
  z-index: 99;
  box-shadow: 0 4rpx 20rpx rgba(255, 102, 0, 0.2);
  border: 2rpx solid rgba(255, 102, 0, 0.3);
  transition: all 0.3s ease;
}

.my-rank:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(255, 102, 0, 0.3);
}

/* 现代其他人的排名项 */
.other-rank { 
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
  border-radius: 12rpx;
  margin: 4rpx 0;
}

.other-rank:hover {
  background: rgba(255, 102, 0, 0.05);
  transform: translateX(8rpx);
}

.other-rank:last-child {
  border-bottom: none;
}

/* 现代排名数字 */
.rank-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF6600;
  min-width: 50rpx;
  text-align: center;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 现代排名用户头像 */
.rank-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 3rpx solid #FFE0B3;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.2);
  transition: all 0.3s ease;
}

.rank-avatar:hover {
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(255, 102, 0, 0.3);
}

/* 现代排名用户名 */
.rank-name {
  flex: 1;
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 现代排名金额 */
.rank-amount {
  font-size: 26rpx;
  font-weight: 700;
  color: #FF6600;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}