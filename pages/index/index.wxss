/* 现代首页设计 */
page {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  position: relative;
}

/* 现代公告容器 */
.notice-container {
  margin: 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  overflow: hidden;
  position: relative;
}

.notice-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}

/* 公告头部 */
.notice-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx 16rpx;
  background: linear-gradient(135deg, #FFE0B3 0%, #FFF3E0 100%);
  position: relative;
  z-index: 2;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF6600;
  flex: 1;
}

.notice-indicator {
  display: flex;
  gap: 8rpx;
}

.indicator-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: rgba(255, 102, 0, 0.3);
  transition: all 0.3s ease;
}

.indicator-dot.active {
  background: #FF6600;
  transform: scale(1.2);
}

/* 公告内容区域 */
.notice-content {
  position: relative;
  height: 160rpx;
  overflow: hidden;
}

.notice-swiper {
  height: 100%;
}

.notice-item {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

/* 公告卡片 */
.notice-card {
  width: 100%;
  height: 120rpx;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  border-left: 4rpx solid;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.notice-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.4) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.notice-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.notice-card:active::before {
  opacity: 1;
}

/* 公告卡片头部 */
.notice-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
}

.notice-type-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.notice-type-text {
  font-size: 26rpx;
  font-weight: 700;
  margin-right: 12rpx;
}

.notice-time {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 公告卡片内容 */
.notice-card-content {
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
}

.notice-text {
  font-size: 24rpx;
  color: #2d3748;
  line-height: 1.4;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 公告卡片底部 */
.notice-card-footer {
  position: relative;
  z-index: 2;
}

.notice-more {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  font-weight: 500;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.notice-card:active .notice-more {
  opacity: 1;
}

/* 现代标题系统 */
.title { 
  color: #FF6600; 
  font-size: 40rpx;
  padding: 32rpx 24rpx 24rpx;
  text-align: center;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

/* 现代产品滚动区域 */
.products-scroll { 
  white-space: nowrap; 
  padding: 24rpx 20rpx;
  margin: 0 16rpx;
}

/* 现代产品卡片 */
.product-item { 
  display: inline-block; 
  width: 300rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 20rpx;
  padding: 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.product-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.product-item image { 
  width: 100%;
  height: 220rpx;
  transition: transform 0.3s ease;
}

.product-item:active image {
  transform: scale(1.05);
}

.product-info {
  padding: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
}

.product-name {
  font-size: 28rpx;
  color: #2d3748;
  display: block;
  line-height: 1.4;
  margin-bottom: 12rpx;
  font-weight: 600;
  height: 78rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 8rpx;
}

.current-price {
  font-size: 32rpx;
  color: #FF6600;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.original-price {
  font-size: 24rpx;
  color: #a0aec0;
  text-decoration: line-through;
  font-weight: 500;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.rating {
  font-size: 24rpx;
  color: #FFD700;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.sales {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* 现代动物列表网格 */
.animal-list { 
  display: grid; 
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  padding: 24rpx 20rpx;
  margin: 0 16rpx;
}

/* 现代动物卡片 */
.animal-card { 
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.animal-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 102, 0, 0.05) 0%, rgba(255, 138, 0, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
}

.animal-card:active {
  transform: translateY(-6rpx) scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.animal-card:active::before {
  opacity: 1;
}

.animal-card image { 
  width: 100%; 
  height: 220rpx;
  border-radius: 0;
  object-fit: cover;
  transition: transform 0.3s ease;
  position: relative;
  z-index: 2;
}

.animal-card:active image {
  transform: scale(1.05);
}

.animal-info { 
  font-size: 26rpx;
  color: #4a5568;
  margin-top: 16rpx;
  line-height: 1.4;
  text-align: center;
  padding: 0 20rpx 20rpx;
  font-weight: 500;
  position: relative;
  z-index: 2;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
}
