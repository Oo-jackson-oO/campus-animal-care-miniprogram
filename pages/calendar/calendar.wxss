/* 现代守护侠页面设计 */
.container { 
  padding: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  position: relative;
}
  
/* 现代标题设计 */
.title { 
  font-size: 44rpx;
  color: #FF6600;
  margin: 24rpx 0 20rpx;
  font-weight: 700;
  text-align: center;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  border-radius: 2rpx;
}
  
/* 现代周历控制模块 */
.week-control {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}
  
/* 现代周控制按钮 */
.week-btn {
  width: 140rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  border-radius: 35rpx;
  border: none;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.week-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.week-btn:active {
  transform: translateY(2rpx) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 102, 0, 0.4);
}

.week-btn:active::before {
  left: 100%;
}
  
/* 现代周信息显示 */
.week-info {
  font-size: 30rpx;
  color: #2d3748;
  background: linear-gradient(135deg, #FFE0B3 0%, #FFF3E0 100%);
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(255, 102, 0, 0.15);
  border: 1rpx solid rgba(255, 102, 0, 0.2);
  min-width: 200rpx;
  text-align: center;
}
  
/* 现代周历显示模块 */
.week-calendar {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.week-calendar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}
  
/* 现代星期标题行 */
.week-header {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

/* 现代星期标题 */
.weekday-title {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #718096;
  font-weight: 600;
  padding: 8rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.weekday-title:first-child,
.weekday-title:last-child {
  color: #FF6600;
  background: rgba(255, 102, 0, 0.1);
}
  
/* 现代日期显示行 */
.week-dates {
  display: flex;
  justify-content: space-around;
  padding: 0 8rpx;
}

/* 现代日期项 */
.date-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  margin: 4rpx;
}

.date-item:active {
  transform: scale(0.9);
}

.date-item .date-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a5568;
  transition: all 0.3s ease;
}
  
/* 现代今日日期样式 */
.date-item.today {
  background: linear-gradient(135deg, #FFE0B3 0%, #FFF3E0 100%);
  border: 2rpx solid #FF6600;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.3);
}

.date-item.today .date-number {
  color: #FF6600;
  font-weight: 700;
}

/* 现代选中日期样式 */
.date-item.selected {
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 102, 0, 0.4);
  transform: scale(1.1);
}

.date-item.selected .date-number {
  color: white;
  font-weight: 700;
}

/* 现代非本月日期样式 */
.date-item.disabled {
  opacity: 0.3;
  background: #f7fafc;
}

.date-item.disabled .date-number {
  color: #a0aec0;
}
  
/* 现代事项标题 */
.section-title {
  font-size: 36rpx;
  color: #FF6600;
  font-weight: 700;
  margin: 24rpx 0 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  border-radius: 2rpx;
}
  
/* 现代捐款进度列表 */
.progress-list { 
  margin-bottom: 24rpx;
}

/* 现代动物卡片 */
.animal-card { 
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.animal-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
}

.animal-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}
  
/* 现代动物信息行 */
.animal-info { 
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

/* 现代动物头像 */
.animal-avatar { 
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 3rpx solid #FFE0B3;
  box-shadow: 0 4rpx 15rpx rgba(255, 102, 0, 0.2);
  transition: all 0.3s ease;
}

/* 现代动物详情容器 */
.animal-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

/* 现代动物名称 */
.animal-name { 
  font-size: 28rpx;
  font-weight: 700;
  color: #2d3748;
  line-height: 1.3;
}

/* 现代动物需求 */
.animal-need { 
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
}
  
/* 现代进度条容器 */
.progress-container {
  margin: 16rpx 0;
}

/* 现代进度条 */
.progress-bar {
  width: 100%;
  height: 16rpx;
  border-radius: 8rpx;
  background: #e2e8f0;
  overflow: hidden;
  position: relative;
}

.progress-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  border-radius: 8rpx;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 现代进度信息 */
.progress-info {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 24rpx;
  align-items: center;
}

/* 现代已筹金额 */
.raised {
  color: #FF6600;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6600 0%, #FF8A00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 现代目标金额 */
.target {
  color: #718096;
  font-weight: 500;
}
  
/* 现代捐款输入区域 */
.donate-section { 
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
  align-items: center;
}
  
/* 现代捐款输入框 */
.donate-input { 
  flex: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #ffffff;
  color: #2d3748;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.donate-input:focus {
  border-color: #FF6600;
  background: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(255, 102, 0, 0.1);
  outline: none;
}
  
  /* 捐款按钮 
     作用：用户点击捐款的按钮，样式好看、突出 */
  .donate-btn { 
    width: 110rpx; /* 稍微减小按钮宽度 */
    height: 60rpx; /* 稍微减小按钮高度 */
    background: #FF6600; /* 橙色背景，突出 */
    color: white; /* 白色文字，清楚 */
    border: none; /* 去掉默认边框 */
    border-radius: 10rpx; /* 调整圆角 */
    font-size: 22rpx; /* 稍微减小字体大小 */
    font-weight: bold; /* 文字加粗，清楚 */
  }
  
  /* 点击捐款按钮时的样式变化 
     作用：让用户知道点击到按钮了，有反馈 */
  .donate-btn:active {
    background: #e55a00; /* 深橙色，点击时颜色变深 */
  }
  
  /* 无事项提示 
     作用：当没有捐款事项时，显示提示文字，样式清楚 */
  .no-events {
    text-align: center; /* 文字居中 */
    padding: 30rpx 0; /* 减少上下空白，让页面更紧凑 */
    color: #999; /* 浅灰色文字，不刺眼 */
    font-size: 26rpx; /* 文字大小，26rpx清楚 */
  }
  
  /* 进度条样式（针对浏览器内核，设置进度条颜色等） 
     作用：让进度条的背景和已筹部分颜色好看，符合主题 */
  progress::-webkit-progress-bar {
    background-color: #f0f0f0; /* 进度条背景颜色，浅灰色 */
    border-radius: 7rpx; /* 把 corners 弄圆，和上面进度条样式统一 */
  }
  
  progress::-webkit-progress-value {
    background-color: #FF6600; /* 已筹部分的颜色，橙色，突出进度 */
    border-radius: 7rpx; /* 把 corners 弄圆，统一样式 */
  }
